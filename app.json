{
  "expo": {
    "name": "Hope in Christ",
    "slug": "hope-in-christ",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hopeinchrist",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Hope In Christ for All Nations Ministries - Inspiring Hope, Encouraging Life. Experience powerful worship, transformative teachings, and connect with our vibrant community.",
    "primaryColor": "#4A235A",
    "splash": {
      "image": "./assets/new/new purple.png",
      "resizeMode": "contain",
      "backgroundColor": "#351783"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hopeinchrist.ministries",
      "buildNumber": "2.0.0"
    },
    "android": {
      "package": "com.hopeinchrist.ministries",
      "versionCode": 2,
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"],
      "adaptiveIcon": {
        "backgroundColor": "#5B2C8E",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/new/new purple.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#351783"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
